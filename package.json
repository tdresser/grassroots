{
  "dependencies": {
    "@eslint/compat": "^1.2.8",
    "globals": "^16.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npx prettier --write",
      "npx eslint"
    ],
    "*.{md,html,css,json,mjs}": [
      "npx prettier --write"
    ]
  },
  "scripts": {
    "test": "echo \"TODO: test\" && exit 0",
    "format": "npx prettier . --write",
    "check": "npx tsc --noEmit --project grassroots-frontend && npx tsc --noEmit --project grassroots-backend && npx eslint . ",
    "dev": "npx concurrently \"npm run --prefix grassroots-frontend dev -- --host \" \"npm run --prefix grassroots-backend start:dev\""
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@tanstack/eslint-plugin-router": "^1.115.0",
    "concurrently": "^9.1.2",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "husky": "^9.1.7",
    "lint-staged": "^15.5.0",
    "syncpack": "^13.0.3",
    "typescript-eslint": "^8.24.1"
  }
}